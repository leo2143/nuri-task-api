{
  "source": {
    "include": [
      "./controllers/",
      "./services/",
      "./models/",
      "./middlewares/",
      "./README.md"
    ],
    "includePattern": "\\.(js|jsx)$",
    "excludePattern": "(node_modules/|docs/)"
  },
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "template": "node_modules/docdash"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  },
  "docdash": {
    "static": true,
    "sort": true,
    "meta": {
      "title": "TODO API Documentation",
      "description": "Documentación de la API REST para gestión de tareas y usuarios"
    }
  }
}
